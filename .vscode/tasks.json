{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Jekyll Serve",
      "type": "shell",
      "command": "bundle exec jekyll serve --livereload --drafts",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Jekyll Build",
      "type": "shell",
      "command": "bundle exec jekyll build",
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Bundle Install",
      "type": "shell",
      "command": "bundle install",
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
